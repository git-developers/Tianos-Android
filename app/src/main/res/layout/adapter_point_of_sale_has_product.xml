<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        >

        <RelativeLayout
            android:id="@+id/paneltamrin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"

            >

            <!--android:background="@color/success_bg"-->

            <ImageView
                android:id="@+id/iv_thumbnail"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_gravity="left"
                android:scaleType="fitXY" />

            <!--<Button-->
            <!--android:id="@+id/BtnT1"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="150dp"-->
            <!--android:drawableTop="@android:drawable/ic_menu_edit"-->
            <!--android:drawablePadding="6dp"-->
            <!--android:padding="15dp"-->
            <!--android:text="AndroidDhina"-->
            <!--android:textColor="#000"-->
            <!--android:textStyle="bold" />-->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/paneltamrin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            >

            <!--android:background="@color/danger_bg"-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/dummy"
                android:id="@+id/tv_text"
                android:layout_above="@+id/tv_id"
                android:layout_margin="5dp" />

            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_toRightOf="@+id/ll_icon"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentEnd="true"-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Item: ..."
                android:id="@+id/tv_id"
                android:layout_alignBottom="@+id/ll_icon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:visibility="gone"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/paneltamrin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"

            >

            <!--android:background="@color/primary_border"-->

            <EditText
                android:id="@+id/plain_text_input"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="number"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>